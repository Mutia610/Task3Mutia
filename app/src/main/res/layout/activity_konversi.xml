<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/colorBlack"
    android:padding="30dp"
    tools:context=".KonversiActivity">


    <EditText
        android:id="@+id/et1"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginStart="10dp"
        android:backgroundTint="@color/colorPink2"
        android:textStyle="bold"
        android:textSize="22sp"
        android:textColor="@color/colorPink3"
        android:inputType="number"/>

    <Spinner
        android:id="@+id/spin1"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="7dp"
        android:layout_toEndOf="@id/et1"
        android:backgroundTint="@color/colorWhite"
        android:foregroundTint="@color/colorPink3"/>

    <Button
        android:id="@+id/btnKonversiSatuan"
        android:layout_below="@id/et1"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ic_konversi"
        />

    <TextView
        android:id="@+id/tv2"
        android:layout_below="@id/btnKonversiSatuan"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:textStyle="bold"
        android:textSize="22sp"
        android:textColor="@color/colorPink3"
        android:background="@drawable/backgr_tv"
         />

    <Spinner
        android:id="@+id/spin2"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@id/tv2"
        android:layout_below="@id/btnKonversiSatuan"
        android:backgroundTint="@color/colorWhite"/>

</RelativeLayout>