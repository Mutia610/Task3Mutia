<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgr_main"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="30dp"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="87dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/ic_outline_account"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log In"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/btnBangun"
        android:layout_width="wrap_content"
        android:layout_height="87dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/ic_star"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hitung Fisika"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/btnKonversi"
        android:layout_width="wrap_content"
        android:layout_height="87dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/ic_konversi"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Konversi Satuan"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textStyle="bold"/>


</LinearLayout>